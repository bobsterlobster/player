<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.player.PlayerController"
      spacing="24" alignment="CENTER"
      style="-fx-background-color: #000000;">
    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>

    <ListView fx:id="trackListView"
              prefWidth="420" prefHeight="320"
              styleClass="custom-list-view"/>

    <HBox spacing="18" alignment="CENTER">
        <Button fx:id="prevBtn" text="⏮" styleClass="player-btn" style="-fx-background-color: #a5d6a7; -fx-text-fill: #1b5e20; -fx-font-weight: bold;"/>
        <Button fx:id="playBtn" text="▶" styleClass="player-btn" style="-fx-background-color: #a5d6a7; -fx-text-fill: #1b5e20; -fx-font-weight: bold;"/>
        <Button fx:id="pauseBtn" text="⏸" styleClass="player-btn" style="-fx-background-color: #a5d6a7; -fx-text-fill: #1b5e20; -fx-font-weight: bold;"/>
        <Button fx:id="nextBtn" text="⏭" styleClass="player-btn" style="-fx-background-color: #a5d6a7; -fx-text-fill: #1b5e20; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
